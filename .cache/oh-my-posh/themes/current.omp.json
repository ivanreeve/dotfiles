{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "black": "#1e1e2e",
    "blue": "#8aadf4",
    "lavender": "#b2befe",
    "pink": "#f5c2e7",
    "teal": "#94e2d5",
    "white": "#cdd6f4"
  },
  "console_title_template": "{{if .Root}}[root] {{end}}{{.Shell}} in <{{.Folder}}>",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "always_enabled": true
          },
          "template": "->",
          "foreground": "p:teal",
          "background": "transparent",
          "type": "status",
          "style": "plain",
          "foreground_templates": [
            "{{if gt .Code 0}}p:pink{{end}}"
          ]
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "style": "folder"
          },
          "template": " \ue5ff {{ .Path }}",
          "foreground": "p:blue",
          "background": "p:transparent",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "branch_icon": "\uf418 "
          },
          "template": " {{.HEAD}}",
          "foreground": "p:teal",
          "background": "p:transparent",
          "type": "git",
          "style": "plain"
        }
      ]
    }
  ],
  "version": 3,
  "auto_upgrade": false,
  "final_space": true
}
